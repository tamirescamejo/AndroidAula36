<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_tela_principal"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_margin="@dimen/tamanho_margem_16"
        android:textSize="@dimen/tamanho_texto_16"
        android:textAllCaps="true"/>

    <ImageView
        android:layout_width="@dimen/largura_200"
        android:layout_height="@dimen/altura_200"
        android:layout_gravity="center"
        android:src="@drawable/bolt"
        android:contentDescription="@string/descricao_imagem_pet"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/tamanho_texto_12"
        android:text="@string/descricao_pet"/>

    <Button
        android:id="@+id/botao_mensagem"
        android:layout_gravity="center"
        android:layout_margin="@dimen/tamanho_margem_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tamanho_texto_14"
        android:textAllCaps="true"
        android:text="MENSAGEM"/>

</LinearLayout>
</ScrollView>